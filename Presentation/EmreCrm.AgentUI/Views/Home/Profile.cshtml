@model UserModel
@{
    ViewData["Title"] = "Profil";
}
<div class="m-grid__item m-grid__item--fluid  m-grid m-grid--ver-desktop m-grid--desktop m-page__container m-body">
    <div class="m-grid__item m-grid__item--fluid m-wrapper">
        <div class="m-content">
            <div class="row">
                <div class="col-xl-12">
                    <div class="m-portlet m-portlet--mobile  m-portlet--rounded">
                        <div class="m-portlet__head">
                            <div class="m-portlet__head-caption">
                                <div class="m-portlet__head-title">
                                    <h3 class="m-portlet__head-text">
                                        @ViewData["Title"]
                                    </h3>
                                </div>
                            </div>
                        </div>
                        <form id="edit-agent-form" class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(x=>x.Id)
                            <div class="m-portlet__body">
                                <div class="form-group m-form__group row">
                                    <tHelper:label class="col-lg-2 col-form-label" asp-for="CompanyName"></tHelper:label>
                                    <div class="col-lg-3">
                                        <tHelper:input asp-for="CompanyName" class="form-control m-input" placeholder="Firma İsmi"></tHelper:input>
                                        <tHelper:span asp-validation-for="CompanyName" class="form-control-feedback text-danger"></tHelper:span>
                                    </div>
                                    <tHelper:label class="col-lg-2 col-form-label" asp-for="UserName"></tHelper:label>
                                    <div class="col-lg-3">
                                        <tHelper:input asp-for="UserName" class="form-control m-input" placeholder="Kullanıcı İsmi"></tHelper:input>
                                        <tHelper:span asp-validation-for="UserName" class="form-control-feedback text-danger"></tHelper:span>
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <tHelper:label class="col-lg-2 col-form-label" asp-for="OwnerName"></tHelper:label>
                                    <div class="col-lg-3">
                                        <tHelper:input asp-for="OwnerName" class="form-control m-input" placeholder="Firma Sahibi İsmi"></tHelper:input>
                                        <tHelper:span asp-validation-for="OwnerName" class="form-control-feedback text-danger"></tHelper:span>
                                    </div>
                                    <tHelper:label class="col-lg-2 col-form-label" asp-for="OwnerSurname"></tHelper:label>
                                    <div class="col-lg-3">
                                        <tHelper:input asp-for="OwnerSurname" class="form-control m-input" placeholder="Firma Sahibi Soy İsmi"></tHelper:input>
                                        <tHelper:span asp-validation-for="OwnerSurname" class="form-control-feedback text-danger"></tHelper:span>
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <tHelper:label class="col-lg-2 col-form-label" asp-for="Password"></tHelper:label>
                                    <div class="col-lg-3">
                                        <input type="password" class="form-control m-input" id="Password" name="Password" placeholder="Değiştirmek isterseniz yeni parolayı giriniz."/>
                                        <tHelper:span asp-validation-for="Password" class="form-control-feedback text-danger"></tHelper:span>
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <div class="col-lg-6">
                                        <tHelper:label asp-for="CompanyLogo"></tHelper:label>
                                        <br />
                                        <a href="/Uploads/@(Model.CompanyLogo ?? "image-not-found.png")" target="_blank"><img src="/Uploads/@(Model.CompanyLogo ?? "image-not-found.png")" style="width:40%; " alt="Yüklenen Resim" onerror="$.App.imgError(this)" /></a>
                                    </div>
                                    <div class="col">
                                        <tHelper:label asp-for="CompanyLogo"></tHelper:label>
                                        <input id="company-logo" name="CompanyLogo" type="file" />
                                        <tHelper:span asp-validation-for="CompanyLogo" class="form-control-feedback"></tHelper:span>
                                    </div>
                                </div>
                            </div>
                            <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                                <div class="m-form__actions m-form__actions--solid">
                                    <div class="row">
                                        <div class="col-lg-2"></div>
                                        <div class="col-lg-10">
                                            <button type="button" onclick="$.Agent.edit()" class="btn btn-success">Kaydet</button>
                                            <button type="reset" class="btn btn-secondary">Temizle</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section FooterScripts {
    <script src="/app/js/agent.js" type="text/javascript"></script>
}